{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Language & Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Module Resolution */
    "esModuleInterop": true,
    "moduleResolution": "node",

    /* Strict Type Checking */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Output */
    "sourceMap": true,

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
